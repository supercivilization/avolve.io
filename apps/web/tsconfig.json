{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/ui": ["../../packages/ui/src"],
      "@repo/database": ["../../packages/database/src"],
      "@repo/business-logic": ["../../packages/business-logic/src"],
      "@repo/utils": ["../../packages/utils/src"],
      "@repo/emails": ["../../packages/emails/src"],
      "@repo/config": ["../../packages/config/src"],
      "@repo/lib": ["../../packages/lib/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}