{
  "name": "avolve-ai-native-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Intelligence platform with real-time social listening, GitHub ecosystem monitoring, and modern web stack foundation. 40+ production scripts for market research and competitive analysis.",
  "keywords": [
    "intelligence-platform",
    "social-listening",
    "github-monitoring",
    "market-research",
    "seo-automation",
    "competitive-intelligence",
    "nextjs",
    "react",
    "typescript",
    "tailwind",
    "shadcn-ui",
    "monorepo",
    "turborepo"
  ],
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=24.8.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo dev --parallel",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "quality": "turbo lint && turbo type-check && turbo test",
    "pre-deploy": "pnpm quality && pnpm build",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "reset": "pnpm clean && pnpm install",
    "db:generate-types": "supabase gen types typescript --local > packages/database/src/types.ts",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:reset": "turbo db:reset",
    "email:dev": "turbo email:dev",
    "ai:init": "echo 'AI initialization placeholder' && turbo ai:init",
    "ai:generate": "echo 'AI generation placeholder'",
    "ai:test": "turbo ai:test && npm run ai:safety",
    "ai:validate": "turbo ai:validate",
    "ai:safety": "echo 'AI safety check placeholder'",
    "ai:deploy": "npm run ai:validate && vercel deploy --edge-functions",
    "ai:component": "node scripts/ai-component-generator.js",
    "ai:decision:init": "node scripts/ai-decision-tracker.js init",
    "ai:decision:log": "node scripts/ai-decision-tracker.js log",
    "ai:decision:analytics": "node scripts/ai-decision-tracker.js analytics",
    "ai:decision:dashboard": "node scripts/ai-decision-tracker.js dashboard",
    "ai:insights": "node scripts/ai-insight-engine.js",
    "insight:create": "node scripts/generate-insight.js",
    "insight:build": "turbo build && npm run insight:optimize",
    "insight:optimize": "echo 'Optimizing insights for SEO/AEO'",
    "insight:deploy": "vercel deploy apps/web --prod",
    "youtube:setup": "cd scripts && node simple-youtube-test.js",
    "youtube:extract": "cd scripts && node youtube-extractor.js",
    "youtube:test": "cd scripts && node simple-youtube-test.js",
    "youtube:help": "cd scripts && node youtube-extractor.js --help",
    "social:listen": "node scripts/social-listening-system.js monitor",
    "social:youtube": "node scripts/social-listening-system.js youtube",
    "social:github": "node scripts/social-listening-system.js github",
    "social:process": "node scripts/csv-data-processor.js process",
    "social:test": "node scripts/test-csv-processor.js test",
    "social:setup": "node scripts/social-listening-system.js setup",
    "social:x": "node scripts/x-api-integration.js monitor",
    "social:x:test": "node scripts/x-api-integration.js test",
    "social:x:user": "node scripts/x-api-integration.js user",
    "social:x:search": "node scripts/x-api-integration.js search",
    "social:reddit": "node scripts/reddit-monitoring.js monitor",
    "social:reddit:test": "node scripts/reddit-monitoring.js test",
    "social:reddit:sub": "node scripts/reddit-monitoring.js subreddit",
    "social:reddit:search": "node scripts/reddit-monitoring.js search",
    "social:github:enhanced": "node scripts/enhanced-github-monitoring.js monitor",
    "social:github:test": "node scripts/enhanced-github-monitoring.js test",
    "social:github:releases": "node scripts/enhanced-github-monitoring.js releases",
    "social:github:issues": "node scripts/enhanced-github-monitoring.js issues",
    "github:intelligence": "node scripts/comprehensive-github-intelligence.js analyze",
    "github:intelligence:dashboard": "node scripts/comprehensive-github-intelligence.js dashboard",
    "github:intelligence:repos": "node scripts/comprehensive-github-intelligence.js repos",
    "github:test-token": "node scripts/test-github-token.js",
    "social:all": "npm run social:youtube && npm run social:reddit && npm run social:github:enhanced",
    "social:test:all": "npm run social:youtube && npm run social:reddit:test && npm run social:github:test",
    "social:comprehensive:test": "node scripts/comprehensive-social-listening.js test",
    "social:comprehensive:monitor": "node scripts/comprehensive-social-listening.js monitor",
    "social:comprehensive:setup": "node scripts/comprehensive-social-listening.js setup",
    "ai:channels:find": "node scripts/ai-ecosystem-channel-finder.js find",
    "ai:channels:mapping": "node scripts/ai-ecosystem-channel-finder.js mapping",
    "ai:channels:verify": "node scripts/social-listening-system.js verify-channels",
    "monitor:comprehensive": "node scripts/comprehensive-tech-stack-monitor.js monitor",
    "monitor:youtube": "node scripts/comprehensive-tech-stack-monitor.js youtube",
    "monitor:reddit": "node scripts/comprehensive-tech-stack-monitor.js reddit",
    "monitor:github": "node scripts/comprehensive-tech-stack-monitor.js github",
    "monitor:config": "node scripts/comprehensive-tech-stack-monitor.js config",
    "alerts:process": "node scripts/tech-stack-alerts.js process",
    "alerts:critical": "node scripts/tech-stack-alerts.js critical",
    "tech-stack:daily": "npm run monitor:comprehensive && find reports -name 'comprehensive-tech-stack-monitoring-*.json' -newer reports/.last-alert 2>/dev/null | head -1 | xargs -I {} npm run alerts:process {}; touch reports/.last-alert",
    "tech-stack:youtube": "npm run monitor:youtube",
    "tech-stack:reddit": "npm run monitor:reddit",
    "tech-stack:github": "npm run monitor:github",
    "tech-stack:alerts-only": "find reports -name 'comprehensive-tech-stack-monitoring-*.json' | tail -1 | xargs -I {} npm run alerts:critical {}",
    "tech-stack:watch": "while true; do npm run tech-stack:daily; sleep 3600; done",
    "discover:channels": "node scripts/tech-stack-channel-discovery.js discover",
    "discover:youtube": "node scripts/tech-stack-channel-discovery.js youtube",
    "discover:reddit": "node scripts/tech-stack-channel-discovery.js reddit",
    "intelligence:pipeline": "node scripts/intelligence-pipeline-orchestrator.js full",
    "intelligence:pipeline:quick": "node scripts/intelligence-pipeline-orchestrator.js quick",
    "intelligence:pipeline:test": "node scripts/intelligence-pipeline-orchestrator.js test",
    "intelligence:analysis": "node scripts/strategic-intelligence-engine.js process",
    "intelligence:analysis:test": "node scripts/strategic-intelligence-engine.js test",
    "intelligence:briefing": "node scripts/strategic-decision-support.js briefing",
    "intelligence:briefing:test": "node scripts/strategic-decision-support.js test",
    "intelligence:full": "npm run monitor:comprehensive && npm run intelligence:analysis && npm run intelligence:briefing",
    "content:intelligence": "node scripts/content-intelligence-engine.js generate",
    "content:intelligence:test": "node scripts/content-intelligence-engine.js test",
    "content:seo-pipeline": "npm run intelligence:pipeline && npm run content:intelligence",
    "content:transform": "node scripts/monitoring-to-intelligence-adapter.js transform",
    "seo:modern": "node scripts/modern-seo-content-engine.js generate",
    "seo:modern:test": "node scripts/modern-seo-content-engine.js test",
    "seo:strategy": "node scripts/modern-seo-content-engine.js generate research/intelligence-market-research-latest.json research/avolve-seo-strategy.json",
    "seo:full-pipeline": "npm run research:intelligence && npm run seo:modern",
    "seo:advanced": "node scripts/advanced-seo-strategy-engine.js generate",
    "seo:advanced:test": "node scripts/advanced-seo-strategy-engine.js test",
    "seo:advanced:strategy": "npm run research:intelligence && npm run seo:advanced",
    "research:plan": "node scripts/market-research-engine.js plan",
    "research:configure": "node scripts/market-research-engine.js configure",
    "research:interview": "node scripts/market-research-engine.js interview",
    "research:intelligence": "node scripts/intelligence-market-research.js research",
    "research:intelligence:test": "node scripts/intelligence-market-research.js test",
    "research:all": "npm run research:plan && npm run research:configure",
    "research:to-content": "node scripts/market-research-to-content-adapter.js transform",
    "ui:add": "cd packages/ui && npx shadcn@latest add",
    "ui:build": "cd packages/ui && npm run build",
    "ui:test": "cd packages/ui && npm run test",
    "audit:performance": "lighthouse --output=json --output-path=./reports/lighthouse.json http://localhost:3000",
    "audit:accessibility": "axe-core --dir=./apps/web/src --reporter=json --output-file=./reports/axe.json",
    "audit:security": "audit-ci --config=.audit-ci.json",
    "audit:bundle": "bundle-analyzer --config=.bundle-analyzer.json",
    "env:validate": "node scripts/validate-environment.js",
    "env:features": "node scripts/validate-environment.js --features",
    "security:clean": "node scripts/clean-hardcoded-secrets.js",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepare": "echo 'Dependencies installed successfully'"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@changesets/cli": "^2.29.7",
    "@turbo/gen": "^2.5.8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "@types/react": "^19.1.13",
      "@types/react-dom": "^19.1.9"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    }
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0"
  }
}