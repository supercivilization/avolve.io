{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "check:type": {
      "dependsOn": ["^check:type"],
      "outputs": []
    },
    "//#check:type": {
      "dependsOn": [],
      "inputs": ["**/*.ts", "**/*.tsx", "tsconfig.json", "**/tsconfig.json"],
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "check-circular-deps": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.test.ts", "**/*.test.tsx"]
    }
  }
}
