{
  "name": "@unified/config",
  "version": "0.1.0",
  "private": true,
  "description": "Shared configuration for ESLint, TypeScript, Tailwind, and other tools",
  "main": "./dist/index.js",
  "files": [
    "dist/**",
    "eslint/**",
    "typescript/**",
    "tailwind/**"
  ],
  "exports": {
    "./eslint": "./eslint/index.js",
    "./typescript": "./typescript/base.json",
    "./tailwind": "./tailwind/index.js"
  },
  "scripts": {
    "build": "echo 'No build step needed for config package'",
    "lint": "echo 'Config package provides linting rules'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.6.0"
  }
}